

<div class="container">
  <h2 class="heading">Login</h2>

  <p>Please enter the following information to login to your account:</p>

  <%= render '/errors' %>

  <div class="login-form">
    <%= form_tag sessions_path do %>
      <p>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </p>

      <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </p>

      <p>
        <%= submit_tag "Login"%>
      </p>

    <% end %>
  </div>

  <div class="registry-link">
    <p>If you're new to the site, <%= link_to " register here", new_user_path, remote: true %></p>
  </div>
</div>
