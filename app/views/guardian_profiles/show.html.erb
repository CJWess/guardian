<h1> <%= @guardian.title %> </h1>
<%= image_tag @guardian.image.url(:medium), protocol: "https"  %>

<%= link_to "Add Memory", new_guardian_profile_memory_path(@guardian) %>
<br>
<br>

<% @memories.each do |memory| %>
    <h3><%= memory.description %></h3>
    <%= audio_tag memory.audio.url, controls: true, autoplay: false, protocol: "https"  %>
    <p><%= memory.formatted_date %></p>
    <p><%= link_to "Edit", edit_guardian_profile_memory_path(@guardian) %></p>
<% end %>
