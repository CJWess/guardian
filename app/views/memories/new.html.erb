<h1>New Memory</h1>

<%= form_for [:guardian_profile, @memory] do |f| %>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :audio_recording %>
    <%= f.text_field :audio_recording %>
  </p>

  <p>
    <%= f.label :audio %>
    <%= f.file_field :audio %>
  </p>

  <p>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.submit "Add Memory" %>
  </p>
<% end %>

