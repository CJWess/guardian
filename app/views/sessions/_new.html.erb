<div class="new-session-container">
  <h1 class="heading">User Login</h1>
  <p>Please enter the following information to login to your account:</p>
  <%= render '/errors' %>
  <div>
    <%= bootstrap_form_tag url: '/sessions' do |f| %>
        <%= f.email_field :email %>
        <%= f.password_field :password %>
        <%= submit_tag "Login"%>
    <% end %>
    <div class="login-or-reg-link">
      <p>New to Guardian? <%= link_to " sign up", new_user_path %></p>
    </div>
  </div>
</div>
