<h1 class="heading">User Login</h1>

<div class="container">

  <p>Please enter the following information to login to your account:</p>

  <%= render '/errors' %>

  <div class="login">
    <%= form_tag sessions_path do %>
      <p class="login-item">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
      </p>

      <p class="login-item">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      </p>

      <p class="login-item">
      <%= submit_tag "Login"%>
      </p>
    <% end %>
  </div>
</div>
