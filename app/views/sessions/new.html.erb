<h1 class="heading">User Login</h1>

<div class="container">

  <p>Please enter the following information to login to your account:</p>

  <%= render '/errors' %>

  <div>
    <%= form_tag sessions_path do %>
      <p>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </p>

      <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </p>

      <p>
        <%= submit_tag "Login"%>
      </p>

    <% end %>
  </div>
</div>
