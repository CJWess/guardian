<div class="user-show">
  <div class="col-lg-6 col-lg-offset-3 text-center">
    <h1> <%= @user.first_name %>'s Guardians <%= link_to "library_add", new_guardian_profile_path, class: "material-icons", style: "font-size: large;" %></h1>
    <br><br>
    <div class="col-lg-6 col-lg-offset-3 text-center">
    <% if @guardians.count >= 1 %>
      <input id="speech" type="text" style="padding-left: 20px;">
      <div><button id="rec" class="btn material-icons">mic</button></div>
      <div id="spokenResponse" class="spoken-response">
        <div class="spoken-response__text"></div>
      </div>
     <% end %>
    </div>
  </div>
  <div class="col-lg-6 col-lg-offset-3 text-center append-audio">
    <% @guardians.each do |guardian| %>
      <h2>
        <%= link_to guardian.title, guardian_profile_path(guardian)%>
      </h2>
      <%= image_tag guardian.image.url, protocol: "https", class: "userpage-avatar-image" %>
    <% end %>
  </div>
</div>
